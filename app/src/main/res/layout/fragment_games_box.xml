<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="vertical"
    android:paddingStart="@dimen/dimen_big_16dp"
    android:paddingEnd="@dimen/dimen_big_16dp"
    android:paddingBottom="@dimen/dimen_big_16dp">

    <ImageView
        android:id="@+id/main_menu_img"
        android:layout_width="@dimen/dimen_games_type_300dp"
        android:layout_height="@dimen/dimen_games_type_300dp"
        android:src="@drawable/layout4x4_o" />

    <TextView
        android:id="@+id/tv_size_box"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_big_16dp"
        android:text="4x4"
        android:textColor="@color/colorTextBlack"
        android:textSize="@dimen/text_size_title_big_super_30sp"
        android:textStyle="bold" />

</LinearLayout>